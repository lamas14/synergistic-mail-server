#navribbon {
	width: 800px;
	height: 40px;
	background-image: url('../images/ribbon-bg.png');
	background-repeat: repeat-x;
	font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
		"Lucida Sans Unicode", Geneva, Verdana, sans-serif;
	margin: 0 auto;
	list-style: none;
	margin-bottom: 10px;
}

#body {
	width: 800px;
	height: auto;
	font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
		"Lucida Sans Unicode", Geneva, Verdana, sans-serif;
	margin: 0 auto;
}

#navribbon li {
	float: left;
	margin-right: 20px;
	position: relative;
}

#navribbon a {
	display: block;
	font-family: sans-serif;
	padding: 12px 18px;
	color: white;
	list-style: none;
	text-decoration: none;
	margin-left: 18px;
}

#navribbon a:hover {
	color: white;
	background-color: #8ab206;
	text-decoration: none;
}

#navribbon ul {
	background: white;
	/* Adding a background makes the dropdown work properly in IE7+. Make this as close to your page's background as possible (i.e. white page == white background). */
	list-style: none;
	position: absolute;
	left: -9999px;
	/* Hide off-screen when not needed (this is more accessible than display:none;) */
}

#navribbon ul li {
	padding-top: 1px;
	/* Introducing a padding between the li and the a give the illusion spaced items */
	float: none;
}

#navribbon ul a {
	white-space: nowrap;
	/* Stop text wrapping and creating multi-line dropdown items */
}

#navribbon li:hover ul { /* Display the dropdown on hover */
	left: 0; /* Bring back on-screen when needed */
}

#navribbon li:hover a {
	/* These create persistent hover states, meaning the top-most link stays 'hovered' even when your cursor has moved down the list. */
	color: white;
	background-color: #8ab206;
	text-decoration: none;
}

#navribbon li:hover ul a {
	/* The persistent hover state does however create a global style for links even before they're hovered. Here we undo these effects. */
	text-decoration: none;
}

#navribbon li:hover ul li a:hover {
	/* Here we define the most explicit hover states--what happens when you hover each individual link. */
	color: white;
	background-color: #103872;
	text-decoration: none;
}

